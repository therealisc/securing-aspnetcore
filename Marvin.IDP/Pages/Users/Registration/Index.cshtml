@page
@model Marvin.IDP.Pages.Users.Registration.IndexModel
@{

    <div>
        <div class="page-header">
            <h1>User Registration</h1>
        </div>

        <partial name="_ValidationSummary" />
        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">UserRegistration</h3>
                    </div>
                    <div>
                        <form asp-route="Login">
                            <input type="hidden" asp-for="Input.ReturnUrl" />
                            <fieldset>
                                <div class"form-group">
                                    <label asp-for="Input.UserName"></label>
                                    <input class="form-control" placeholder="Username" asp-for"Input.UserName" autofocus>
                                </div>
                                <div class"form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for"Input.Password" autocomplete="off">
                                </div>
                                <div class"form-group">
                                    <label asp-for="Input.GivenName"></label>
                                    <input class="form-control" placeholder="Given Name" asp-for"Input.GivenName">
                                </div>
                                <div class"form-group">
                                    <label asp-for="Input.FamilyName"></label>
                                    <input class="form-control" placeholder="Family Name" asp-for"Input.FamilyName">
                                </div>
                                <div class"form-group">
                                    <label asp-for="Input.Country"></label>
                                    <select class="form-control" asp-items="@Model.Input.CountryCodes" asp-for"Input.Country"></select>
                                </div>

                                <div>
                                    <button class="btn btn-primary">Register</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
